<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ListaContaActivity">

    <TextView
        android:id="@+id/entradaTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textColor="@android:color/white"
        android:textSize="32sp"
        android:background="@drawable/entrada_total"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/saidaTextView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textColor="@android:color/white"
        android:background="@drawable/saida_total"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="@+id/entradaTextView"
        app:layout_constraintTop_toBottomOf="@+id/entradaTextView" />

    <TextView
        android:id="@+id/totalSaldoContasView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textColor="@android:color/white"
        android:background="@drawable/total"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="@+id/saidaTextView"
        app:layout_constraintTop_toBottomOf="@+id/saidaTextView" />

    <ListView
        android:id="@+id/lista_conta_view"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/totalSaldoContasView"
        app:layout_constraintTop_toBottomOf="@+id/totalSaldoContasView" />

</android.support.constraint.ConstraintLayout>